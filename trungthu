<script>
function docNoiDung() {
    const textA = document.getElementById("phanA").innerText;
    const textB = document.getElementById("phanB").innerText;
    const text = textA + ". " + textB;

    const utterance = new SpeechSynthesisUtterance(text);
    utterance.lang = "vi-VN";
    utterance.rate = 0.95;
    utterance.pitch = 1;

    speechSynthesis.cancel();
    speechSynthesis.speak(utterance);
}
</script>

